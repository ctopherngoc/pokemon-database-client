<table>
    <thead>
        <th>Pokemon Id</th>
        <th>Pokemon Name</th>
        <th>HP</th>
        <th>Attack</th>
        <th>Defence</th>
        <th>Special Attack</th>
        <th>Special Defence</th>
        <th>Speed</th>
        <th>Type 1</th>
        <th>Type 2</th>
        <th>Ability 1</th>
        <th>Ability 2</th>
        <th>Hidden Ability</th>
    </thead>
    <tbody>
        {{#each Pokemon}}
        <tr>
            <td>{{this.breed_id}}</td>
            <td>{{this.pokemon_name}}</td>
            <td>{{this.health}}</td>
            <td>{{this.attack}}</td>
            <td>{{this.defence}}</td>
            <td>{{this.special_atk}}</td>
            <td>{{this.special_def}}</td>
            <td>{{this.speed}}</td>
            <td>{{this.type_1}}</td>
            <td>{{this.type_2}}</td>
            <td>{{this.ability_1}}</td>
            <td>{{this.ability_2}}</td>
            <td>{{this.hidden_ability}}</td>
            <td><a href="/delete_pokemon?breed_id={{this.breed_id}}">Delete</a></td>
            <td>
                <a href="/update_pokemon?breed_id={{this.breed_id}}&pokemon_name={{this.pokemon_name}}&health={{this.health}}&attack={{this.attack}}&defence={{this.defence}}&special_atk={{this.special_atk}}&special_def={{this.special_def}}&speed={{this.speed}}&type_1={{this.type_1}}&type_2={{this.type_2}}&ability_1={{this.ability_1}}&ability_2={{this.ability_2}}&hidden_ability={{hidden_ability}}">Update</a>
            </td>
        </tr>
        {{/each}}

    </tbody>
            <tfoot>
            <tr>
                <td><a href="/pokemon"><button>Show All</button></a></td>
            </tr>
        </tfoot>
    </tbody>
</table>

