<div id="filter" class="tabcontent">
    <h3> Search for Pokemon</h3>
    <form id="search-pokemon" action="/pokemon" method="get"> 
        <label for="pokemon_name"></label>
                    Name:
                    <select name="pokemon_name" id="pokemon_name">
                        <option value="">Select by Name</option>
                        {{#each Pokemon}}
                        <option value="{{this.pokemon_name}}">{{this.pokemon_name}}</option>
                        {{/each}}
                    </select>
                    <br>
                    Type_1: <input type="text" name="type_1"><br>
                    Type_2: <input type="text" name="type_2"><br>
                    Ability 1: <input type="text" name="ability_1"><br>
                    Ability 2: <input type="text" name="ability_2"><br>
                    Hidden Ability: <input type="text" name="hidden_ability">
                <br>

        <p>
            <input type="submit" value="Search">
        </p>
    </form>
</div>

  <div id="add" class="tabcontent">
    {{!-- <h3>Add</h3> --}}
    <h3>Add New Pokemon</h3>
    <form id="addpokemon" action="/pokemon" method="post">
        <table id = "tab_table">
            <tr>
                <td id ="tab_cell">Pokemon Name: <input type="text" required="required" name="pokemon_name"></td>
                <td id ="tab_cell">HP: <input type="number" required="required" name="health"></td>
            </tr>
            <tr>
                <td id ="tab_cell">Attack: <input type="number" required="required" name="attack"></td>
                <td id ="tab_cell">Special Attack: <input type="number" required="required" name="special_atk"><br></td>
            </tr>
            <tr>
                <td id ="tab_cell">Defence: <input type="number" required="required" name="defence"></td>
                <td id ="tab_cell">Special Defence: <input type="number" required="required" name="special_def"></td>
            </tr>
            <tr>
                <td id ="tab_cell">Speed: <input type="number" required="required" name="speed"></td>
                <td id ="tab_cell">Hidden Ability: <input type="text" required="required" name="hidden_ability"></td>
            </tr>
            <tr>
                <td id ="tab_cell">Type_1: <input type="text" required="required" name="type_1"></td>
                <td id ="tab_cell">Type_2: <input type="text" name="type_2"></td>
            </tr>
            <tr>
                <td id ="tab_cell">Ability 1: <input type="text" required="required" name="ability_1"></td>
                <td id ="tab_cell">Ability 2: <input type="text" name="ability_2"></td>
            </tr>
    </table>
        <br>
        <input type="submit" value="Submit">
        <br>
    </form>
  </div>

